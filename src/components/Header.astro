---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import InstaLogo from "./logos/Insta.astro";
import YouTubeLogo from "./logos/YouTube.astro";
import GithubLogo from "./logos/Github.astro";
import SiteLogo from "./logos/SiteLogo.astro";
---

<header>
	<nav>
		<h2><a href="/"><SiteLogo/></a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Projects</HeaderLink>
			<HeaderLink href="/journal">Journal</HeaderLink>
			<HeaderLink href="/garden">Garden</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://www.instagram.com/iokaiju" target="_blank">
				<span class="sr-only">Go to the K4IJU YouTube channel</span>
				<InstaLogo/>
			</a>
			<a href="https://www.youtube.com/@K4IJU" target="_blank">
				<span class="sr-only">Go to the K4IJU YouTube channel</span>
				<YouTubeLogo/>
			</a>
			<a href="https://github.com/Lukkex" target="_blank">
				<span class="sr-only">Go to Lukkex's GitHub repo</span>
				<GithubLogo/>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background-image: linear-gradient(var(--black-gradient));
		box-shadow: 0 2px 20px rgba(var(--gray), 10%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--white);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
